#!/usr/bin/env bash
# Script to configure a new Ubuntu machine with Nginx

# Update package repositories and install Nginx
sudo apt-get update -y -qq && \
sudo apt-get install nginx -y

# Start Nginx service
sudo service nginx start

# Allow Nginx through firewall
sudo ufw allow 'Nginx HTTP'

# Set permissions for web directory
sudo chown -R "$USER":"$USER" /var/www/html
sudo chmod -R 755 /var/www/

# Backup default index file and create new one
sudo cp /var/www/html/index.nginx-debian.html /var/www/html/index.nginx-debian.bckp
echo "Hello World!" | sudo tee /var/www/html/index.nginx-debian.html >/dev/null

# Restart Nginx service (without using systemctl)
sudo /etc/init.d/nginx restart
